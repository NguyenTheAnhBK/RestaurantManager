<!-- Footer -->
@model IEnumerable<FrontEnd.Models.Footer>
<footer class="footer text-center">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">@item.ColumName</h4>
                    <p class="lead mb-0">
                        @item.Text
                        <br>
                    </p>
                    @{ if (item.ColumName == "SOCIAL NETWORK")
                        {
                                <ul class="list-inline mb-0">
                                    @{Html.RenderAction("Social", "Home");
                                    }
                                </ul>
                            }
                        }
                </div>
            }
        </div>
    </div>
</footer>
